        <div class="row">
            @{int count = 0; }
            @foreach (var item in Model)
            {
                if (count <= 8)
                {
                    <div class="col-md-3">
                        <div class="car-wrap ftco-animate">
                            <div class="img d-flex align-items-end" style="background-image: url(/images/@item.photo_Car);">
