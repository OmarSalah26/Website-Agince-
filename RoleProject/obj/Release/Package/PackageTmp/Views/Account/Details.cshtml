@model RoleProject.Models.ApplicationUser

@using RoleProject.Models
@using RoleProject.View_Model



@{

    ViewBag.Title = "Details";

    Layout = "~/Views/Shared/_UserProfile.cshtml";
    ViewBag.Photo = Model.photoAdmin;
    ViewBag.Name = Model.UserName;
    ViewBag.id = Model.Id;

}

<div id="colorlib-main">
    <section class="ftco-section-no-padding bg-light">
        <div class="hero-wrap">
            <div class="overlay"></div>
            <div class="d-flex align-items-center js-fullheight">
                <div class="author-image text img d-flex">
                    <section class="home-slider js-fullheight owl-carousel">
                        <div class="slider-item js-fullheight" style="background-image:url(../../images/@Model.photoAdmin)">
                        </div>

                        <div class="slider-item js-fullheight" style="background-image:url(../../images/@Model.photoAdmin);">
                        </div>
                    </section>
                </div>
                <div class="author-info text p-3 p-md-5">
                    <div class="desc">
                        <span class="subheading">Hello! @Model.UserName</span>

                        <h3 class="signature h4"> <span>Name :</span> @Model.UserName</h3>
                        <h3 class="signature h4"> <span>National ID :</span> @Model.Id</h3>
                        <h3 class="signature h4"> <span>City :</span> @Model.city</h3>
                        <h3 class="signature h4"> <span>Street :</span> @Model.street</h3>
                        <h3 class="signature h4"> <span>PhoneNumber :</span> @Model.PhoneNumber</h3>

