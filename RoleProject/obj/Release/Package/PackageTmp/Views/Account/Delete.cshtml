
@model RoleProject.Models.ApplicationUser
@using RoleProject.Models
<link rel="stylesheet" href="~/Content/autoroad/css/css/UpladPhoto_.css">


<div class="hero-wrap" style="background-image: url('/Content/autoroad/images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container" style="padding: 6px;">
        <div class="row no-gutters slider-text justify-content-start align-items-center">
            <div class="col-lg-6 col-md-6 ftco-animate d-flex align-items-end">
                <div class="text">
                    <h1 class="mb-4">
                        Are you sure you want to delete this?
                    </h1>

              
                </div>
            </div>
            <div class="col-lg-2 col"></div>
            <div class="col-lg-4 col-md-6 mt-0 mt-md-5 d-flex">

              





                @using (Html.BeginForm("Delete", "Account", new { ReturnUrl = ViewBag.ReturnUrl },
                    FormMethod.Post, new { @class = "request-form ftco-animate", role = "form", style = "width:350px" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Clinet</h4>
                    <hr />

                    <div class="form-group">
                        <span style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.UserName)  :
                        </span>


                        @Html.DisplayFor(model => model.UserName)
                    </div>

                    <div class="form-group">
                        <span style="font-weight:bold">

                            @Html.DisplayNameFor(model => model.city) :
                        </span>


                        @Html.DisplayFor(model => model.city)
                    </div>

                    <div class="form-group">
                        <span style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.street) :
                        </span>
                        @Html.DisplayFor(model => model.street)

                    </div>


                    <div class="form-group">
                        <span style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.Email) :
                        </span>
                        @Html.DisplayFor(model => model.Email)

                    </div>



                    <div class="form-group">
                        <span style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.PhoneNumber) :
                        </span>
                        @Html.DisplayFor(model => model.PhoneNumber)

                    </div>




                    <div class="form-group">
                        <span style="font-weight:bold">
                            @Html.DisplayNameFor(model => model.city) :
                        </span>
                        @Html.DisplayFor(model => model.city)

                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Delete" class="btn btn-primary py-3 px-4 " style="padding:50px" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Content/autoroad/js/PhotoUpload.js"></script>
}