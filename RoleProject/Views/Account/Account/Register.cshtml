@model RoleProject.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




<div class="hero-wrap" style="background-image:  url('/Content/autoroad/images/bg_1.jpg'); height:1100px ; " data-stellar-background-ratio="0.5">
    <div class="overlay" style=" height:1100px ; "></div>
    <div class="container" style="padding:0 ;  height:1100px ; ">
        <div class="row no-gutters slider-text justify-content-start align-items-center">
            <div class="col-lg-6 col-md-6 ftco-animate d-flex align-items-end">
                <div class="text">
                    <h1 class="mb-4">Now Create New Account.</h1>
                    
                </div>
            </div>
            <div class="col-lg-2 col"></div>
            <div class="col-lg-4 col-md-6 mt-0 mt-md-5 d-flex">

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "request-form ftco-animate", role = "form" , style="position:relative; top:50px; "  }))
                {
                    @Html.ValidationSummary("",htmlAttributes: new { @class="text-danger"})
                    <h2>Register</h2>
                    @Html.AntiForgeryToken()


                    <div class="form-group">
                        <p style="font-size:15px;">National ID</p>
                        @*@Html.Label(" NationalId", new { @class = "col-md-2 control-label" })*@
                        <div>

                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control", placeholder = "National Id" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="font-size:15px;">Email</p>

                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })*@
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                        </div>
                    </div>

                    <div class="form-group">
                        <p style="font-size:15px;">UserName</p>

                        @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })*@
                        <div>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "UserName" })
                        </div>
                    </div>





                    <div class="d-flex">
                        <div class="form-group mr-2">
                            <p style="font-size:15px;">Password</p>

                            @*@Html.Label("Password", new { @class = "col-md-2 control-label" })*@
                            <div>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                        </div>
                        <div class="form-group ml-2">

                            <p style="font-size:15px;">ConfirmPassword</p>
                            @*@Html.Label("ConfirmPassword", new { @class = "col-md-2 control-label" })*@
                            <div>
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "ConfirmPassword" })
                            </div>
                        </div>


                    </div>

                    <div class="d-flex">
                        <div class="form-group  ml-2">
                            <p style="font-size:15px;">City</p>
                            @*@Html.LabelFor(m => m.city, new { @class = "col-md-2 control-label" })*@
                            <div>
                                @Html.TextBoxFor(m => m.city, new { @class = "form-control", placeholder = "City" })
                            </div>
                        </div>

                        <div class="form-group  ml-2">
                            <p style="font-size:15px;">Street</p>
                            @*@Html.LabelFor(m => m.Street, new { @class = "col-md-2 control-label" })*@
                            <div>
                                @Html.TextBoxFor(m => m.Street, new { @class = "form-control", placeholder = "Street" })
                            </div>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="form-group ml-2 ">
                            <p style="font-size:15px;">PhoneNumber</p>

                            @*@Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })*@
                            <div>
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "PhoneNumber" })
                            </div>
                        </div>

                        <div class="form-group ml-2">
                            <p style="font-size:15px;">Roles</p>

                            @*@Html.LabelFor(m => m.Roles, new { @class = "col-md-2 control-label" })*@
                            <div>


                                @Html.DropDownList("Roles", null, new { @class = "form-control" })


                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Search Vehicle" class="btn btn-primary py-3 px-4">
                    </div>
                }
            </div>
                        </div>
                </div>
</div>