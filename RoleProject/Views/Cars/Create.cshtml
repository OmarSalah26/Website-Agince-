
@model RoleProject.Models.Car


@{
    ViewBag.Title = "Create";

}



<link rel="stylesheet" href="~/Content/autoroad/css/css/UpladPhoto_.css">




<div class="hero-wrap" style="background-image: url('/Content/autoroad/images/bg_1.jpg');height:1300px" data-stellar-background-ratio="0.5">
    <div class="overlay" style="height:1300px"></div>
    <div class="container">
        <div class="row no-gutters slider-text justify-content-start align-items-center">
            <div class="col-lg-6 col-md-6 ftco-animate d-flex align-items-end">
                <div class="text">
                    <h1 class="mb-4">Create <span>A New Car</span> <span></span></h1>

                </div>
            </div>
            <div class="col-lg-2 col"></div>
            <div class="col-lg-4 col-md-6 mt-0 mt-md-5 d-flex">



                @using (Html.BeginForm("Create", "Cars", new { ReturnUrl = ViewBag.ReturnUrl },
                    FormMethod.Post, new { enctype = "multipart/form-data", @class = "request-form ftco-animate", role = "form", style = "margin-bottom: 95px;margin-top:20px" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(model => model.Type_Of_Car, htmlAttributes: new { style = "margin-left:26px" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Type_Of_Car, new { htmlAttributes = new { @class = "form-control txt-field" } })
                            @Html.ValidationMessageFor(model => model.Type_Of_Car, "", new { @class = "text-danger", placeholder = "Type of car" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Car_Brand, htmlAttributes: new { style = "margin-left:26px" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Car_Brand, new { htmlAttributes = new { @class = "form-control txt-field" } })
                            @Html.ValidationMessageFor(model => model.Car_Brand, "", new { @class = "text-danger", placeholder = "Car Brand" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Car_Model, htmlAttributes: new { style = "margin-left:26px" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Car_Model, new { htmlAttributes = new { @class = "form-control txt-field" } })
                            @Html.ValidationMessageFor(model => model.Car_Model, "", new { @class = "text-danger", placeholder = "Car Model" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Chassis_No, htmlAttributes: new { style = "margin-left:26px" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Chassis_No, new { htmlAttributes = new { @class = "form-control txt-field" } })
                            @Html.ValidationMessageFor(model => model.Chassis_No, "", new { @class = "text-danger", placeholder = "TChassis_No" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.price_in_day, htmlAttributes: new { style = "margin-left:26px" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.price_in_day, new { htmlAttributes = new { @class = "form-control txt-field" } })
                            @Html.ValidationMessageFor(model => model.price_in_day, "", new { @class = "text-danger", placeholder = "TChassis_No" })
                        </div>
                    </div>

                    <div class="container" style="Margin-top:-62px;margin-bottom: -33px;">

                        <div class="avatar-upload">
                            <div class="avatar-edit">
                                <input type='file' name="photo_path" id="imageUpload" accept=".png, .jpg, .jpeg" />
                                <label for="imageUpload"></label>
                            </div>
                            <div class="avatar-preview">
                                <div id="imagePreview" style="background-image: url(../../Content/autoroad/images/iconCar.jpg);">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style=" margin-left: 13px;">
                        <div class="col-md-offset-2 col-md-10">

                            <input type="submit" value="Create" class="btn btn-primary py-3 px-4" />
                        </div>
                    </div>

                }

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Content/autoroad/js/PhotoUpload.js"></script>
}

